<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <form action="/schools/new" metho="GET">
        <button type="submit" class="btn btn-primary"> Add School </button>
      </form>


      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">School Name</th>
            <th scope="col">Rating</th>
            <th scope="col">Review</th>
            <th scope="col">Details</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if(schools) { %>
            <% for (let i=schools.length-1; i>=0; i--) { %>
              <tr>
                <td><a href="/schools/<%= schools[i]._id %>"> <%= schools[i].schoolName %> </a></td>
                <td><%= schools[i].ratings[0] %></td>
                <td><%= schools[i].reviews[0] %></td>
                <td><a src='#'>view</a></td>
                <td><form action="/schools/index/<%= schools[i]._id %>?_method=DELETE"
                  class="delete-review" method="POST">
                  <button type="submit" class="btn-close" aria-label="Close"></button>
                </form></td>
              </tr>
              <% } %>
         <% } %>

        </tbody>
      </table>
      <div class="carousel-caption d-none d-md-block" id="caption1">

        <div class="slider-btn">
          <button class="btn btn-1">
            <% if (user) { %>
              <a href="/logout" class="logout">LOG OUT</a>
            <% } else {%>
              <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png" class="img-fluid login-pic"></a>
              <% } %></button>
          </button>
          <button class="btn btn-2 school-btn"><a class="school-btn" href="/schools/index">All school</a></button>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://media-exp1.licdn.com/dms/image/C4E1BAQF8ypra6qNVGw/company-background_10000/0/1548254197022?e=2147483647&v=beta&t=ugrEjoT-cRqDcyhIvJhv87081NHKaPBuh9XdDj0pVXI" class="d-block w-100" alt="Harvard">
      <div class="carousel-caption d-none d-md-block" id="caption2">
        <h5>Our Mission</h5>
        <p>...</p>

        <div class="slider-btn">
          <button class="btn btn-1">
            <% if (user) { %>
              <a href="/logout" class="logout">LOG OUT</a>
            <% } else {%>
              <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png" class="img-fluid login-pic"></a>
              <% } %></button>
          </button>
          <button class="btn btn-2"><a class="school-btn" href="/schools/index">All school</a></button>
        </div>
      </div>
    </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>