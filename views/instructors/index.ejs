<%- include('../partials/header') %>


<div class="container showpage-container">
  <div class="row justify-content-center">
  <form action="/schools/<%= school._id %>/instructors" method="POST">
    <div>
      <input type="text" class="form-control" name="name" placeholder="Instructor name">
    </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1">Review</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="reviews"  rows="3"></textarea>
  </div>
  <div>
    <select class="form-select mb-3" aria-label="Default select example" name="ratings">
      <option selected>Rate this school</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>

  <div>
    <select class="form-select mb-3" aria-label="Default select example" name="accessibility">
      <option selected>How Accessible Is This Instrcutor</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>

  <div>
    <select class="form-select mb-3" aria-label="Default select example" name="prepareness">
      <option selected>How Prepared Is This Instructor</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary"> Add Professor </button>
  </form>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Professor Name</th>
      <th scope="col">Rating</th>
      <th scope="col">Review</th>
      <th scope="col">Details</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if(instructors) { %>
      <% for (let i=instructors.length-1; i>=0; i--) { %>
        <tr>
          <td><a href="/instructors/<%= instructors[i]._id %>"><%= instructors[i].name %></a></td>
          <td><%= reviews[i].ratings %></td>
          <td><%= reviews[i].reviews %></td>
          <td><a src='#'>view</a></td>
        </tr>
        <% } %>
   <% } %>

  </tbody>
</table>

<%- include('../partials/footer') %>