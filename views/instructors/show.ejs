<%- include('../partials/header') %>

<body class="insShow">
  <div class="container showpage-container">
    <div class="row">

      <div class="col">
        <p class="ins-intro"> Reviews For: </p>
        <p class="ins-name"><%= instructor.name %></p>
      </div>

      <div class="col">
        <form class="show-form" action="/instructors/<%= instructor._id %>" method="POST">

          <div class="mb-3">
            <label id="form-intro" for="exampleFormControlTextarea1">Write Your Review For: <%= instructor.name %></label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="reviews"  rows="3"></textarea>
          </div>
          <div>
            <select class="form-select mb-3" aria-label="Default select example" name="ratings">
              <option selected class="selected">Overall Ratings For This Instructor</option>
              <option value=1>1</option>
              <option value=2>2</option>
              <option value=3>3</option>
              <option value=4>4</option>
              <option value=5>5</option>
            </select>
          </div>

          <div>
            <select class="form-select mb-3" aria-label="Default select example" name="accessibility">
              <option selected class="selected">How Accessible Is This Instrcutor</option>
              <option value=1>1</option>
              <option value=2>2</option>
              <option value=3>3</option>
              <option value=4>4</option>
              <option value=5>5</option>
            </select>
          </div>

          <div>
            <select class="form-select mb-3" aria-label="Default select example" name="prepareness">
              <option selected class="selected">How Prepared Is This Instructor</option>
              <option value=1>1</option>
              <option value=2>2</option>
              <option value=3>3</option>
              <option value=4>4</option>
              <option value=5>5</option>
            </select>
          </div>

          <button type="submit" class="btn btn-secondary"> Add Review </button>
          </form>
      </div>
    </div>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">User Name</th>
        <th scope="col">Rating</th>
        <th scope="col">Review</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% if(reviews) { %>
        <% for (let i=reviews.length-1; i>=0; i--) { %>
          <tr>
            <td><img class="userAvatar" alt="avatar" src="<%= reviews[i].userAvatar %>"><%= reviews[i].userName %></td>
            <td><p>Overall Ratings:         <%= reviews[i].ratings %></p>
                <p class="smaller-ratings">Accessibility Rating:    <%= reviews[i].accessibility %></p>
                <p class="smaller-ratings">Prepareness Rating:      <%= reviews[i].prepareness %> </p>
          </td>
            <td><p><%= reviews[i].reviews %></p></td>
            <td><form action="/instructors/<%= instructor._id %>/<%= reviews[i]._id %>?_method=DELETE"
              class="delete-review" method="POST">
              <button type="submit" class="btn-close" aria-label="Close"></button>
            </form> </td>
          </tr>
          <% } %>
     <% } %>

    </tbody>
  </table>
</body>


<%- include('../partials/footer') %>