<%- include('../partials/header') %>


<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn.wallpapersafari.com/98/92/j41fo7.jpg" class="d-block w-100" alt="Harvard">
      <div class="carousel-caption d-none d-md-block" id="form">
        <form action="/schools/new" metho="GET">
          <button type="submit" class="btn btn-primary"> Add School </button>
        </form>


        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">School Name</th>
              <th scope="col">Rating</th>
              <th scope="col">Review</th>
              <th scope="col">Details</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% if(schools) { %>
              <% for (let i=schools.length-1; i>=0; i--) { %>
                <tr>
                  <td><a href="/schools/<%= schools[i]._id %>"> <%= schools[i].schoolName %> </a></td>
                  <td><%= schools[i].ratings[0] %></td>
                  <td><%= schools[i].reviews[0] %></td>
                  <td><a src='#'>view</a></td>
                  <td><form action="/schools/index/<%= schools[i]._id %>?_method=DELETE"
                    class="delete-review" method="POST">
                    <button type="submit" class="btn-close" aria-label="Close"></button>
                  </form></td>
                </tr>
                <% } %>
           <% } %>

          </tbody>
        </table>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://www.capturelandscapes.com/wp-content/uploads/2018/01/RJPollard.jpg" class="d-block w-100" alt="Harvard">
      <div class="carousel-caption d-none d-md-block" id="form-ins">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">Professor Name</th>
              <th scope="col">Details</th>
            </tr>
          </thead>
          <tbody>
            <% if(instructors) { %>
              <% for (let i=instructors.length-1; i>=0; i--) { %>
                <tr>
                  <td><%= instructors[i].name %></a></td>
                  <td><button class="btn" ><a href="/instructors/<%= instructors[i]._id %>">View This Instructor</a></button> </td>

                </tr>
                <% } %>
           <% } %>

          </tbody>
        </table>
      </div>
    </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


    <%- include('../partials/footer') %>