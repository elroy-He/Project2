<%- include('../partials/header') %>


<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn.wallpapersafari.com/98/92/j41fo7.jpg" class="d-block w-100" alt="Harvard">

      <div class="carousel-caption d-none d-md-block" id="form">
        <div class="index-title">ALL BOOTCAMPS</div>
        <form  id="index-btn" action="/schools/new" metho="GET">
          <button type="submit" class="btn btn-primary" > Add School </button>
        </form>


        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">School Name</th>
              <th scope="col">Rating</th>
              <th scope="col">Review</th>
              <th scope="col">Details</th>

            </tr>
          </thead>
          <tbody>
            <% if(schools) { %>
              <% for (let i=schools.length-1; i>=0; i--) { %>
                <tr>
                  <td><a href="/schools/<%= schools[i]._id %>"> <%= schools[i].schoolName %> </a></td>
                  <td><%= schools[i].ratings[0] %></td>
                  <td><%= schools[i].reviews[0] %></td>
                  <td><a src='#'>view</a></td>
                </tr>
                <% } %>
           <% } %>

          </tbody>
        </table>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://www.wallpaperbetter.com/wallpaper/78/296/975/mountains-nature-sky-river-beautiful-scenery-1080P-wallpaper.jpg" class="d-block w-100" alt="Harvard">

      <div class="carousel-caption d-none d-md-block" id="form-ins">

        <table class="table table-striped table-hover">
          <div class="index-title">ALL INSTRUCTORS</div>
          <thead>
            <tr>
              <th scope="col">Instructor Name</th>
              <th scope="col">Details</th>
            </tr>
          </thead>
          <tbody>
            <% if(instructors) { %>
              <% for (let i=instructors.length-1; i>=0; i--) { %>
                <tr>
                  <td ><img class="gif gif-td" src="https://cdn.dribbble.com/users/4666603/screenshots/11339749/media/74a7db86baec23a0b88b9c34fb90546f.gif"> <%= instructors[i].name %></td>
                  <td><button class="btn" ><a href="/instructors/<%= instructors[i]._id %>">View This Instructor</a></button> </td>

                </tr>
                <% } %>
           <% } %>

          </tbody>
        </table>
      </div>
    </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


    <%- include('../partials/footer') %>